{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach index.html",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8081/html/index.html",
            "runtimeArgs": [
               "--new-window",
               "--remote-debugging-port=9222" // standard chrome debugging port
            ],
            "webRoot": "src",
            "diagnosticLogging": true,
            "sourceMaps": true
        },
        {
            "name": "Attach to tests",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "compile",
            "program": "${workspaceRoot}\\node_modules\\jasmine-node\\lib\\jasmine-node\\cli.js", // ${workspaceRoot}/src/spec/TestsSpec.js",
            "args": ["TestsSpec.js"],
            "cwd": "${workspaceRoot}\\src\\spec\\",
            "outDir": "${workspaceRoot}\\src\\spec\\",
            "sourceMaps": true
        }
        
    ]
}